@model Menajes_Maipu.Models.ModeloBD.Producto
@{
    var user = Session["user"];
    var id = Session["id"];

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Ladmin.cshtml";
}

<!-- page content -->
<div class="right_col" role="main">

        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>
                        Eliminar Producto
                    </h3>
                </div>
            </div>
            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Producto <small>Eliminar</small></h2>
                            @*<ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>

                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>*@
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            @using (Html.BeginForm("", "", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal form-label-left" }))
                            {







                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                        Nombre <span class="required"></span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @foreach (var item in ViewBag.nombre)
                                        {
                                            @Html.TextBoxFor(model => model.Nombre_producto, new { @readonly = "readonly", @Value = @item.Nombre_producto, @class = "form-control" })

                                        }
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                                        Descripcion <span class="required"></span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @foreach (var item in ViewBag.nombre)
                                        {

                                            @Html.TextBoxFor(model => model.Descripcion_producto, new { @readonly = "readonly", @class = "form-control", @Value = @item.Descripcion_producto })


                                        }
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                                        Stock <span class="required"></span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @foreach (var item in ViewBag.nombre)
                                        {
                                            @Html.TextBoxFor(model => model.Stock_producto, new { @readonly = "readonly", @class = "form-control", @Value = @item.Stock_producto })

                                        }


                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                                        Precio <span class="required"></span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @foreach (var item in ViewBag.nombre)
                                        {
                                            @Html.TextBoxFor(model => model.Precio_producto, new { @readonly = "readonly", @class = "form-control", @Value = @item.Precio_producto })

                                        }

                                    </div>
                                </div>

                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                                        Imagen <span class="required"></span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @foreach (var item in ViewBag.Listar)
                                        {


                                            <div style="float:left;margin-right:20px">
                                                <img width="75" height="75" src="@Url.Action("GetImage", "Home", new { item.Id_producto})" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            }

                            <span class="section"></span>





                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color" align="Center">
                                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                                    @Html.ActionLink("Volver al listado", "ProductosList","Dashboard", new { }, new { @class = "btn btn-info" })
                                </div>
                            }




                        </div>
                    </div>
                </div>
            </div>
        </div>

     <!-- footer content -->
     <footer>
                        <div class="">
                            <p class="pull-right">
                                <a>RGL</a>
                            </p>
                        </div>
                        <div class="clearfix"></div>
                    </footer>
     <!-- /footer content -->

     </div>
<!-- /page content -->