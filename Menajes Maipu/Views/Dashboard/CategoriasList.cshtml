@model IEnumerable<Menajes_Maipu.Models.ModeloBD.Categoria>

@{
    var user = Session["user"];
    var id = Session["id"];

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Ladmin.cshtml";

}

<!-- page content -->
    <div class="right_col" role="main">
    <div class="">

        <div class="page-title">
            <div class="title_left">
                <h3>
                    Listado de Categorias
                  
                </h3>
            </div>

        </div>
        <div class="clearfix"></div>


        <div class="row">
         
                <div class="col-md-12 col-sm-12 col-xs-12" align="left">
                    <div class="x_panel">
                        <div class="x_title">
                            <a href=@Url.Action("CategoriasCreate", "Dashboard") class="btn btn-success"> Ingresar Categoria</a>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                              
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content" align="center">
                            <table class="table" align="center">
                                <thead>
                                    <tr>
                                        <th>
                                            Nombre Categorias
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>




                                @foreach (Menajes_Maipu.Models.ModeloBD.Categoria item in ViewBag.Categoria)
                                {
                                    <tbody>

                                        <tr>

                                            <td>
                                                <h4>     @Html.DisplayFor(modelItem => item.Nombre_categoria) </h4>
                                            </td>
                                            <td>
                                                <a href=@Url.Action("CategoriasEdit", new {id = item.Id_categoria }) class="btn btn-default "><i class="fa fa-pencil"></i></a>
                                                @*@Html.ActionLink("Editar", "CategoriasEdit", new { id = item.Id_categoria }, new { @class = "btn btn-warning" })*@
                                                <a href=@Url.Action("CategoriasDelete", new {id = item.Id_categoria }) class="btn btn-default "><i class="fa fa-trash-o"></i></a>
                                                  @*@Html.ActionLink("Eliminar", "CategoriasDelete", new { id = item.Id_categoria }, new { @class = "btn btn-danger" })*@
                                            </td>
                                        </tr>
                                    </tbody>
                                }

                            </table>





                        </div>

                    </div>
                </div>
                






            </div>

    </div>

    <!-- footer content -->
    <footer>
        <div class="">
            <p class="pull-right">
                <a>RGL</a>
            </p>
        </div>
        <div class="clearfix"></div>
    </footer>
    <!-- /footer content -->

</div>
<!-- /page content -->
