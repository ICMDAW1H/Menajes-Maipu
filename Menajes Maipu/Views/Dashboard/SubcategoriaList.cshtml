@model IEnumerable<Menajes_Maipu.Models.ModeloBD.Subcategoria>
@using PagedList.Mvc;
@using PagedList;

@{
    var user = Session["user"];
    var id = Session["id"];

    ViewBag.Title = "SubcategoriaList";
    Layout = "~/Views/Shared/_Ladmin.cshtml";
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">

        <div class="page-title">
            <div class="title_left">
                <h3>
                  Listado de Subcategorias  
                </h3>
            </div>

       
        </div>
        <div class="clearfix"></div>


        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12" align="center">
                <div class="x_panel">
                    <div class="x_title"  align="left">
                        <a href=@Url.Action("SubcategoriaCreate", "Dashboard") class="btn btn-success"> Ingresar Subcategoria</a>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content" align="center">
                        <table class="table" align="center">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre Categoria
                                    </th>
                                    <th>
                                        Nombre Subcategorias
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>




                            @foreach (Menajes_Maipu.Models.ModeloBD.Subcategoria item in ViewBag.Subcategoria)
                            {
                                <tbody>

                                    <tr>

                                        <td>
                                            <h4>     @Html.DisplayFor(modelItem => item.Categoria.Nombre_categoria) </h4>
                                        </td>

                                        <td>
                                            <h4>     @Html.DisplayFor(modelItem => item.Nombre_subcategoria) </h4>
                                        </td>

                                        <td>
                                            <a href=@Url.Action("SubcategoriaEdit", new {id = item.Id_subcategoria }) class="btn btn-default "><i class="fa fa-pencil"></i></a>
                                            <a href=@Url.Action("SubcategoriaDelete", new {id = item.Id_subcategoria }) class="btn btn-default "><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            }

                        </table>





                    </div>

                </div>

                <ul class="pagination">
                    <li>
                        @Html.PagedListPager((IPagedList)ViewBag.Subcategoria, page => Url.Action("SubcategoriaList", new { page }))
                    </li>
                </ul>

            </div>







        </div>

    </div>

    <!— footer content —>
    <footer>
        <div class="">
            <p class="pull-right">
                <a>RGL</a>
            </p>
        </div>
        <div class="clearfix"></div>
    </footer>
    <!— /footer content —>

</div>
<!— /page content —>
