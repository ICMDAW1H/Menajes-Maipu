@model IEnumerable<Menajes_Maipu.Models.ModeloBD.Contacto>
@using PagedList.Mvc;
@using PagedList;

@{
    var user = Session["user"];
    var id = Session["id"];

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Ladmin.cshtml";
}

<!— page content —>
<div class="right_col" role="main">
    <div class="">

        <div class="page-title">
            <div class="title_left">
                <h3>
                    Listado de mensajes publicos
                </h3>
            </div>
        </div>
        <div class="clearfix"></div>


        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12" align="center">
                <div class="x_panel">
                    <div class="x_title">
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>

                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content" align="center">
                        <table class="table" align="center">
                            <thead>
                                <tr>

                                    <th>
                                        Fecha
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Asunto
                                    </th>

                                </tr>
                            </thead>



                            @foreach (Menajes_Maipu.Models.ModeloBD.Contacto item in ViewBag.Contacto)
                            {

                                <tbody>

                                    <tr>
                                        @if (item.Estado != "Respondido")
                                        {

                                            <td>
                                                <h4><b>  @Html.DisplayFor(modelItem => item.Fecha)</b>    </h4>
                                            </td>
                                            <td>
                                                <h4><b>  @Html.DisplayFor(modelItem => item.Email_contacto)</b>     </h4>
                                            </td>
                                            <td>
                                                <h4><b>  @Html.DisplayFor(modelItem => item.Asunto_contacto)</b>    </h4>
                                            </td>


                                        }
                                        else
                                        {

                                            <td>
                                                <h4>  @Html.DisplayFor(modelItem => item.Fecha)   </h4>
                                            </td>
                                            <td>
                                                <h4>  @Html.DisplayFor(modelItem => item.Email_contacto)    </h4>
                                            </td>
                                            <td>
                                                <h4>  @Html.DisplayFor(modelItem => item.Asunto_contacto)   </h4>
                                            </td>
                                        }

                                        <td>
                                            <a href=@Url.Action("ContactoDetalle", new {id = item.Id_contacto }) class="btn btn-default "><i class="fa fa-search" style="color:red"></i></a>
                                            <a href=@Url.Action("ContactoDelete", new {id = item.Id_contacto }) class="btn btn-default "><i class="fa fa-trash-o" style="color:red"></i></a>
                                        </td>

                                    </tr>
                                </tbody>
                            }

                        </table>

                    </div>

                </div>

                <ul class="pagination">
                    <li>
                        @Html.PagedListPager((IPagedList)ViewBag.Contacto, page => Url.Action("ContactoList", new { page }))
                    </li>
                </ul>

            </div>

        </div>

    </div>

    <!— footer content —>
    <footer>
        <div class="">
            <p class="pull-right">
                <a>RGL</a>
            </p>
        </div>
        <div class="clearfix"></div>
    </footer>
    <!— /footer content —>

</div>
<!— /page content —>
