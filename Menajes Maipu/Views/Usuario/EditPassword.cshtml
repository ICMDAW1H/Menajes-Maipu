@model Menajes_Maipu.Models.ModeloBD.Usuario

@{
    var user = Session["user"];
    var id = Session["id"];
    ViewBag.Title = "EditPassword";
}
<div class="container">


    <div class="row" align="center">
     
        @if (ViewBag.Estado == "Error")
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>No se pudo cambiar su contraseña</strong> Revise nuevamente los campos que ha ingresado.
            </div>
        }
   
        <div class="col-sm-10" align="center">
            <h2 class="title text-center">Cambio <strong> De contraseña Actual</strong></h2>
           
            <div class="signup-form">
                @using (Html.BeginForm("EditPassword", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal form-label-left" }))
                {
                    @Html.AntiForgeryToken()

                    <table class="table table-responsive cart_info" border="0">
                      
                        @Html.EditorFor(model => model.id_user, new { htmlAttributes = new { @class = "form-control", style = "display:none", @Value = @id } })
                        <tr style="background-color:#FE980F">

                            <td align="center" colspan="4"><h4 style="color:white">Datos a modificar</h4></td>

                        </tr>
                        <tr class="active">
                            <td class="description">
                                <label class="control-label" for="number">Ingrese su contraseña actual<span class="required">*</span></label>
                            </td>
                            <td>
                                @Html.Editor("Contrasena1", new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "password", @title = "Caracteres inválidos", @pattern = "[a-zA-Z ]+" } })
                                @Html.ValidationMessageFor(model => model.Contrasena, null, new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr class="active">
                            <td class="description"><p><b>Repita su contraseña actual*</b></p></td>
                            <td>
                                @Html.Editor("Contrasena2", new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "password", @title = "Caracteres inválidos", @pattern = "[a-zA-Z ]+" } })

                            </td>
                        </tr>
                        <tr class="active">
                            <td class="description"><p><b>Ingrese su nueva contraseña*</b></p></td>
                            <td>

                                @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "password", @title = "Caracteres inválidos", @pattern = "[a-zA-Z ]+" } })
                            </td>
                        </tr>
                    
                    </table>


                    <button type="submit" class="btn btn-default">Registrame</button>



                }



            </div><!--/sign up form-->
        </div>
    </div>
</div>