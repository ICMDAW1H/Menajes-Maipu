@model IEnumerable<Menajes_Maipu.Models.ModeloBD.Mensaje_consulta>

@{ 
    var id = Session["id"];
}

<section id="cart_items">
    <div class="container">
        @if (ViewBag.Estado == "Exito")
        {
            <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Felicitaciones</strong> Su consulta ha sido ingresada con exito.
            </div>
        }

        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href=@Url.Action("Index","Home")>Volver</a></li>
                <li class="active">Bandeja de entrada</li>
            </ol>
        </div>

        <div class="x_title" align="center">
            <a href=@Url.Action("ConsultaCreate","Usuario", new {id = @id }) class="btn btn-success "> Ingresar Consulta</a>
        </div>

        <div class="table-responsive cart_info"  style="overflow-y:auto; height:800px;">
            <table class="table table-condensed table-responsive table-hover" >
                <thead>
                   
                    <tr class="cart_menu">
                        <th>
                            Fecha
                        </th>
                        <th>
                            Motivo
                        </th>
                        <th>
                            Estado
                        </th>
                        <th>
                            Respuesta
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>

                    @foreach (Menajes_Maipu.Models.ModeloBD.Mensaje_consulta item in ViewBag.Lista)
                    {

                        <tbody>

                            <tr>
                                @if (item.Estado_consuta != "Respondido")
                                {

                                    <td>
                                        <h4><b>  @Html.DisplayFor(modelItem => item.Fecha)</b>    </h4>
                                    </td>
                                    <td>
                                        <h4><b>  @Html.DisplayFor(modelItem => item.Motivo_consulta)</b>     </h4>
                                    </td>
                                            <td>
                                                <h4><b> Procesando  </b>    </h4>
                                            </td>
                                            <td>
                                                <h4><b> @Html.DisplayFor(modelItem => item.Respuesta_consulta)  </b>    </h4>
                                            </td>
                                            <td>
                                                <h4> <a href=@Url.Action("EntradaDetalle", new { id = item.Id_contacto }) class="btn btn-warning">Ver Detalle</a>  </h4>
                                            </td>
                                }
                                else
                                {

                                    <td>
                                        <h4>  @Html.DisplayFor(modelItem => item.Fecha)   </h4>
                                    </td>
                                    <td>
                                        <h4>  @Html.DisplayFor(modelItem => item.Motivo_consulta)    </h4>
                                    </td>
                                            <td>
                                                <h4>  @Html.DisplayFor(modelItem => item.Mensaje)   </h4>
                                            </td>
                                            <td>
                                                <h4> @Html.DisplayFor(modelItem => item.Respuesta_consulta)      </h4>
                                            </td>
                                            <td>
                                                <h4> <a href=@Url.Action("EntradaDetalle", new { id = item.Id_contacto }) class="btn btn-info">Ver Detalle</a>  </h4>
                                            </td>

                                }


                        </tbody>
                    }
</table>
        </div>
    </div>
</section> <!--/#cart_items-->
